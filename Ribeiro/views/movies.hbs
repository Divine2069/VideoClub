<h2> Movies:</h2>
<form method="get">
    <div class="row">
        <div class="form-group col-sm-4">
            <input type="text" class="form-control" placeholder="Title Name" name="movieName">
        </div>
        <div class="form-group col-sm-4">
            <input type="submit" class="form-control btn-primary" value="Search">
        </div>
    </div>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Language</th>
            <th>Released Date</th>
            <th>Rating</th>
            <th>Lenght</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        {{#each arrayFilmes}}
        <tr>
            <td>
                <img src='1.jpg'>
            </td>
            <td>
                {{Id_Filme}}
            </td>
            <td>
                {{Title_Name}}
            </td>
            <td>
                {{Language}}
            </td>
            <td>
                {{Released_Date}}
            </td>
            <td>
                {{Rating}}
            </td>
            <td>
                {{Time}}
            </td>
            <td>
                {{Summary}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>