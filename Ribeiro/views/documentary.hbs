<link rel="StyleSheet" type="text/css" href="/MoviePage.css" media="screen" >

<h2> Documentary Search:</h2>

<form method="get">
    <div class="row">
        <div class="form-group col-sm-4">
            <input type="text" class="form-control" placeholder="Title Name" name="documentaryName">
        </div>
        <div class="form-group col-sm-4">
            <input type="submit" class="form-control btn-primary" value="Search">
        </div>
    </div>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Language</th>
            <th>Released Date</th>
            <th>Rating</th>
            <th>Lenght</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        {{#each arrayDocumentarys}}
        <tr>
            <td>
                {{Id_Serie}}
            </td>
            <td>
               <a href={{path}}>{{Title_Name}}</a>
            </td>
            <td>
                {{Language}}
            </td>
            <td>
                {{Released_Date}}
            </td>
            <td>
                {{Rating}}
            </td>
            <td>
                {{Time}}
            </td>
            <td>
                {{Summary}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>